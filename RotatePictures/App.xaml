
<Application x:Class="RotatePictures.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:RotatePictures"
			 xmlns:converter="clr-namespace:RotatePictures.Converters"
			 StartupUri="View\MainWindow.xaml"
>
	<Application.Resources>
		<ResourceDictionary>
			<converter:StartStopRotateConverter x:Key="LocalStartStopRotateConverter"/>
			<converter:IsMotionPictureConverter x:Key="LocalStillPictureConverter"/>
			<converter:IsMotionPictureConverter x:Key="LocalMotionPictureConverter"/>
		</ResourceDictionary>
	</Application.Resources>
</Application>
